<%- include('../../partials/header') %>
<body>
    <%- include('../../partials/navbarhomepage') %>
    <div class="container">
        <h1 class="mt-2">Artigos</h1>
        <% result.articles.rows.forEach(function(article){ %>
            <div class="card mt-2">
                <div class="card-header">
                    <%= article.title %>
                </div>
                <div class="card-body">
                    <a href="/article/<%= article.slug %>" class="btn btn-primary">Ler artigo</a>
                </div>
            </div>
        <% }) %>
        <% if (result.page > 1 && result.next == true) {%>
            <a href="/articles/page/<%= result.page - 1 %>" style="float:left" class="btn btn-primary m-2">Previous</a>
            <a href="/articles/page/<%= result.page + 1 %>" style="float:right" class="btn btn-primary m-2">Next</a>
        <% } else if (result.page == 2 && result.next == true) {%>
            <a href="../../" style="float:left" class="btn btn-primary m-2">Home</a>
            <a href="/articles/page/<%= result.page + 1 %>" style="float:right" class="btn btn-primary m-2">Next</a>
        <% } else if (result.page == 2 && result.next == false) {%>
            <a href="../../" style="float:left" class="btn btn-primary m-2">Home</a>
        <% } else if (result.page > 1 && result.next == false) {%>
            <a href="/articles/page/<%= result.page - 1 %>" style="float:left" class="btn btn-primary m-2">Previous</a>
        <% } else {%>
            <a href="../../" style="float:left" class="btn btn-primary m-2">Home</a>
        <% } %>

    </div>
</body>
<%- include('../../partials/footer') %>