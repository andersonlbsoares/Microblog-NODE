<%- include('../../partials/header') %>
<body>
    <%- include('../../partials/navbar') %>
    <div class="container">
        <div class="card mt-2">
            <div class="card-header">
                <h2>Editar Artigo</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input type="hidden" name="id" value="<%=article.id%>">
                    <input type="text" class="form-control" name="title" value="<%=article.title%>" placeholder="Defina o titulo o artigo">
                    <textarea class="form-control mt-2" name="body" id="article" placeholder="Defina o corpo do artigo"><%=article.body%></textarea>
                    <select class="form-control mt-2" name="category">
                        <option value="0">Selecione uma categoria</option>
                        <% categories.forEach(function(category){ %>
                            <% if (category.id == article.categoryId) { %>
                                <option value="<%= category.id %>" selected><%= category.title %></option>
                            <% } else { %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% } %>
                        <% }) %>
                    </select>
                    <button type="submit" class="btn mt-2 btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer') %>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#article',
        puglin: 'advlist table autolink lists link image charmap print preview searchreplace hr anchor pagebreak wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking save table directionality emoticons template paste textpattern help',
    });
</script>